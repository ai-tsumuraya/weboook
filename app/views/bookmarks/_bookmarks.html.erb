<ul class="list-unstyled row">
  <% bookmarks.each do |bookmark| %>
  <li class="media mb-3 col-md-12">
    <div class="media-body">
      <div class="card">
        <div class="card-header d-flex justify-content-between">
          <span class="card-title m-0 align-middle"><%= bookmark.title %></span>
          <span><%= render 'keeps/save_button', bookmark: bookmark %></span>
        </div>
        <div class="card-body d-flex justify-content-between">
          <div class="block m-2">
            <%= bookmark.note %>
          </div>
          <div>
            <% if current_user == bookmark.user %>
              <%= link_to "Delete", bookmark, method: :delete, data: { confirm: "Are you sure you want to delete the Weboookï¼Ÿ" }, class: 'text-muted m-2' %>
            <% end %>
            <a target="_blank" href="<%= bookmark.link %>" class="btn btn-warning block small">READ MORE</a>
          </div>
        </div>
      </div>
    </div>
  </li>
  <% end %>
</ul>

  <ul class="list-unstyled row">
    <% bookmarks.each do |bookmark| %>
      <li class="media mb-3 col-md-12">
      <div class="media-body">
        <div class="card">
          <div class="card-header">
            <h5 class="card-title"><%= bookmark.title %></h5>
          </div>
          <div class="card-body d-flex justify-content-between">
            <div class="block m-2">
              <%= bookmark.note %>
            </div>
            <div>
              <% if current_user == bookmark.user %>
                <%= link_to "削除", bookmark, method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'text-muted m-2' %>
              <% end %>
              <a href="<%= bookmark.link %>" class="btn btn-warning block small">もう一度読む</a>
            </div>
          </div>
        </div>
      </div>
      </li>
    <% end %>
  </ul>

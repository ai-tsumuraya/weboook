<h2 class="text-center m-5">Saveリスト</h2>
<div class="container">
  <div class="row">
    <div class="col-md-12">
        <% @user.saves.each do |save| %>
          <div>
            <div class="card">
              <div class="card-header d-flex justify-content-between">
                <span class="card-title"><%= save.title %></span>
                <span>
                  <% if current_user == @user %>
                    <%= link_to "Save削除", save, method: :delete, class: 'btn text-muted' %>
                  <% end %>
                </span>
              </div>
              <div class="card-body d-flex justify-content-between">
                <aside class="col-md-8 m-0">
                  <%= save.note %>
                </aside>
                <a target="_blank" href="<%= save.link %>" class="btn btn-warning small">記事を読む</a>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
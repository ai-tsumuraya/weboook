<h2 class="text-center m-5">Saveリスト</h2>
<% unless @stores.present? %>
  <p class="text-center text-muted">SaveされているWebookはありません。</p>
<% end %>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
          <% @user.stores.each do |store| %>
            <div>
              <div class="card mt-3">
                <div class="card-header d-flex justify-content-between">
                  <span class="card-title"><%= store.title %></span>
                </div>
                <div class="card-body d-flex justify-content-between">
                  <aside class="col-md-8 m-0">
                    <%= store.note %>
                  </aside>
                  <a target="_blank" href="<%= store.link %>" class="btn btn-warning small">記事を読む</a>
                </div>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
